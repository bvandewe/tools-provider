{# =============================================================================
TEMPLATES PAGE - Admin CRUD for ConversationTemplates
============================================================================= #}

<div id="templates-page" class="admin-page" style="display: none;">
    {# Page Header #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-file-earmark-text me-2"></i>
                Conversation Templates
            </h2>
            <p class="text-muted mb-0">Manage structured conversation flows for assessments and guided interactions</p>
        </div>
        <button class="btn btn-primary" id="create-template-btn">
            <i class="bi bi-plus-lg me-1"></i>
            Create Template
        </button>
    </div>

    {# Filter Buttons #}
    <div class="btn-group mb-3" role="group" aria-label="Template filters">
        <button type="button" class="btn btn-outline-secondary filter-btn active" id="filter-all" data-filter="all">
            <i class="bi bi-list me-1"></i>All
        </button>
        <button type="button" class="btn btn-outline-info filter-btn" id="filter-proactive" data-filter="proactive">
            <i class="bi bi-play-circle me-1"></i>Proactive
        </button>
        <button type="button" class="btn btn-outline-warning filter-btn" id="filter-assessments"
            data-filter="assessments">
            <i class="bi bi-patch-check me-1"></i>Assessments
        </button>
    </div>

    {# Loading State #}
    <div id="templates-loading" class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted mt-2">Loading templates...</p>
    </div>

    {# Empty State #}
    <div id="templates-empty" class="text-center py-5" style="display: none;">
        <i class="bi bi-file-earmark-text display-1 text-muted"></i>
        <h4 class="mt-3">No Templates Found</h4>
        <p class="text-muted">Create your first conversation template to get started.</p>
        <button class="btn btn-primary" id="create-template-btn-empty">
            <i class="bi bi-plus-lg me-1"></i>
            Create Template
        </button>
    </div>

    {# Templates Table #}
    <div id="templates-table-container" style="display: none;">
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID / Name</th>
                                <th>Type</th>
                                <th>Category</th>
                                <th>Items</th>
                                <th>Version</th>
                                <th>Updated</th>
                                <th style="width: 140px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="templates-table-body">
                            {# Rows populated by JavaScript #}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
