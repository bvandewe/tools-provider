<!-- Sidebar Overlay (mobile) -->
<div class="sidebar-overlay" id="sidebar-overlay"></div>

<!-- Sidebar -->
<aside class="chat-sidebar" id="chat-sidebar">
    <div class="sidebar-header">
        <div class="sidebar-title-area">
            <h2 id="sidebar-title">Conversations</h2>
            <!-- Agent Selector Dropdown (in sidebar header) -->
            <div class="dropdown sidebar-agent-selector" id="sidebar-agent-selector">
                <button class="btn btn-link sidebar-agent-btn" type="button" id="sidebar-agent-selector-btn"
                    data-bs-toggle="dropdown" aria-expanded="false" title="Select agent">
                    <i class="bi bi-robot" id="sidebar-selected-agent-icon"></i>
                </button>
                <ul class="dropdown-menu sidebar-agent-menu" id="sidebar-agent-menu"
                    aria-labelledby="sidebar-agent-selector-btn">
                    <!-- Agent options populated by JavaScript -->
                </ul>
            </div>
        </div>
        <div class="sidebar-header-actions">
            <button class="btn btn-outline-secondary btn-sm" id="collapse-sidebar-btn" title="Collapse sidebar">
                <i class="bi bi-chevron-double-left"></i>
            </button>
        </div>
    </div>
    <div class="conversation-list" id="conversation-list">
        <!-- Conversations loaded dynamically -->
    </div>
    <div class="sidebar-footer" id="sidebar-footer">
        <div class="footer-content">
            <span class="app-tag" id="app-tag"></span>
            <span class="copyright">Â© <span id="copyright-year"></span></span>
            <a href="#" class="github-link d-none" id="github-link" target="_blank" rel="noopener noreferrer"
                title="View on GitHub">
                <i class="bi bi-github"></i>
            </a>
        </div>
    </div>
</aside>
