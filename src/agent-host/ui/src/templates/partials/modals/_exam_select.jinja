{# =============================================================================
EXAM SELECT MODAL PARTIAL
Modal for selecting an exam blueprint when starting a validation session
============================================================================= #}

<div class="modal fade" id="exam-select-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-check-circle me-2"></i>
                    Select Evaluation Exam
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted mb-3">
                    Choose an exam to start your evaluation session. Each exam tests specific skills
                    and has a set number of questions.
                </p>

                <!-- Loading state -->
                <div id="exam-list-loading" class="text-center py-4">
                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-2 mb-0">Loading available exams...</p>
                </div>

                <!-- Error state -->
                <div id="exam-list-error" class="alert alert-danger d-none" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <span id="exam-list-error-msg">Failed to load exams</span>
                </div>

                <!-- Empty state -->
                <div id="exam-list-empty" class="text-center py-4 d-none">
                    <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2 mb-0">No exams available</p>
                </div>

                <!-- Exam list -->
                <div id="exam-list" class="list-group d-none">
                    <!-- Populated dynamically -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="start-exam-btn" disabled>
                    <i class="bi bi-play-fill me-1"></i>Start Evaluation
                </button>
            </div>
        </div>
    </div>
</div>
