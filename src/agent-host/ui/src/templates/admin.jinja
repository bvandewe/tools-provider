<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Agent Host</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>⚙️</text></svg>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../styles/admin.scss">
</head>

<body class="d-flex flex-column min-vh-100">
    {# Navigation Bar #}
    <nav class="navbar navbar-expand-lg sticky-top bg-body-tertiary border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="bi bi-robot text-primary me-2"></i>
                <span class="fw-bold">Agent Host</span>
                <span class="badge bg-secondary ms-2">Admin</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                {# Admin Navigation Tabs #}
                <ul class="navbar-nav nav-pills me-auto mb-2 mb-lg-0" id="admin-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" data-page="definitions">
                            <i class="bi bi-cpu me-1"></i>
                            Definitions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-page="templates">
                            <i class="bi bi-file-earmark-text me-1"></i>
                            Templates
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-page="settings">
                            <i class="bi bi-gear me-1"></i>
                            Settings
                        </a>
                    </li>
                </ul>

                {# Right side: theme toggle, back to chat, user info #}
                <div class="d-flex align-items-center gap-3">
                    {# Theme Toggle #}
                    <button type="button" class="btn btn-link nav-link p-0" id="theme-toggle"
                        title="Toggle dark/light theme" aria-label="Toggle theme">
                        <i class="bi bi-sun-fill theme-icon-light"></i>
                        <i class="bi bi-moon-fill theme-icon-dark d-none"></i>
                    </button>

                    {# Back to Chat #}
                    <a href="/" class="btn btn-outline-primary btn-sm" title="Back to Chat">
                        <i class="bi bi-chat-dots me-1"></i>
                        Back to Chat
                    </a>

                    {# User Dropdown #}
                    <div class="dropdown" id="user-dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            title="User menu">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><span class="dropdown-item-text fw-medium" id="user-name">Loading...</span></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" id="logout-btn">
                                    <i class="bi bi-box-arrow-right me-2"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    {# Main Content #}
    <main class="container-fluid py-4 flex-grow-1">
        {# Login Section (shown when not authenticated) #}
        <div id="login-section" class="text-center py-5" style="display: none;">
            <div class="card mx-auto" style="max-width: 400px;">
                <div class="card-body">
                    <i class="bi bi-shield-lock display-1 text-muted mb-3"></i>
                    <h3>Admin Access Required</h3>
                    <p class="text-muted">Please log in with an admin account to access this page.</p>
                    <button id="login-btn" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        Login
                    </button>
                </div>
            </div>
        </div>

        {# Admin Dashboard (shown when authenticated) #}
        <div id="admin-dashboard" style="display: none;">
            {# Page Content Container #}
            <div id="page-content">
                {# Definitions Page (default) #}
                {% include 'partials/admin/_definitions.jinja' %}

                {# Settings Page #}
                {% include 'partials/admin/_settings.jinja' %}

                {# Templates Page #}
                {% include 'partials/admin/_templates.jinja' %}
            </div>
        </div>

        {# Access Denied Section #}
        <div id="access-denied-section" class="text-center py-5" style="display: none;">
            <div class="card mx-auto" style="max-width: 400px;">
                <div class="card-body">
                    <i class="bi bi-shield-exclamation display-1 text-danger mb-3"></i>
                    <h3>Access Denied</h3>
                    <p class="text-muted">You don't have permission to access the admin panel.</p>
                    <a href="/" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Return to Chat
                    </a>
                </div>
            </div>
        </div>
    </main>

    {# Footer #}
    <footer class="mt-auto py-3 bg-body-tertiary border-top">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center small text-muted">
                <span>Agent Host Admin</span>
                <span id="version-info">v1.0.0</span>
            </div>
        </div>
    </footer>

    {# Modals #}
    {% include 'partials/admin/_definition_modal.jinja' %}
    {% include 'partials/admin/_template_modal.jinja' %}
    {% include 'partials/admin/_delete_modal.jinja' %}

    {# Toast Container #}
    <div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

    <script type="module" src="../scripts/admin/main.js"></script>
</body>

</html>
