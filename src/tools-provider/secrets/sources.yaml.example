# Source Secrets Configuration
# =============================
#
# This file contains authentication credentials for upstream sources.
# DO NOT commit this file to git - it should be in .gitignore.
#
# In Kubernetes, mount this from a Secret:
#   kubectl create secret generic source-secrets --from-file=sources.yaml
#
# Environment variable override:
#   SOURCE_SECRETS_PATH=/path/to/secrets/sources.yaml

sources:
  # Example: HTTP Basic authentication
  # Replace 'your-source-id' with the actual source ID from the UI
  #
  # your-source-id:
  #   auth_type: http_basic
  #   basic_username: your-username
  #   basic_password: your-password

  # Example: API Key authentication
  #
  # another-source-id:
  #   auth_type: api_key
  #   api_key_name: X-API-Key
  #   api_key_value: your-api-key
  #   api_key_in: header  # or 'query'

  # Example: OAuth2 Client Credentials
  #
  # oauth-source-id:
  #   auth_type: oauth2
  #   oauth2_token_url: https://auth.example.com/oauth/token
  #   oauth2_client_id: your-client-id
  #   oauth2_client_secret: your-client-secret
  #   oauth2_scopes:
  #     - read
  #     - write

  # Example: Bearer Token
  #
  # bearer-source-id:
  #   auth_type: bearer
  #   bearer_token: your-bearer-token
