{% extends "base.jinja" %}

{% block content %}
<!-- Login Section (shown when not authenticated) -->
<div id="login-section" class="container py-5" style="display: none;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-diagram-3 display-1 text-primary mb-3"></i>
                    <h3 class="mb-3">Knowledge Manager</h3>
                    <p class="text-muted mb-4">
                        Please log in to manage knowledge namespaces, terms, and relationships.
                    </p>
                    <a href="/api/auth/login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content (shown when authenticated) -->
<div id="main-content" class="container-fluid py-3" style="display: none;">
    <!-- Page Containers -->
    <div id="page-container">
        <!-- Dashboard Page -->
        <div id="dashboard-page" class="page-content" data-page="dashboard">
            {% include 'partials/pages/_dashboard.jinja' %}
        </div>

        <!-- Namespaces Page -->
        <div id="namespaces-page" class="page-content d-none" data-page="namespaces">
            {% include 'partials/pages/_namespaces.jinja' %}
        </div>

        <!-- Terms Page -->
        <div id="terms-page" class="page-content d-none" data-page="terms">
            {% include 'partials/pages/_terms.jinja' %}
        </div>

        <!-- Admin Page -->
        <div id="admin-page" class="page-content d-none" data-page="admin">
            {% include 'partials/pages/_admin.jinja' %}
        </div>
    </div>
</div>

<!-- Modals -->
{% include 'partials/pages/_namespace_modal.jinja' %}
{% include 'partials/pages/_term_modal.jinja' %}
{% include 'partials/pages/_delete_modal.jinja' %}
{% endblock %}

{% block scripts %}
<script type="module" src="../scripts/main.js"></script>
{% endblock %}
