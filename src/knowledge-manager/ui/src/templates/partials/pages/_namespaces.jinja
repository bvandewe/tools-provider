{# =============================================================================
NAMESPACES PAGE - Full list with data table
============================================================================= #}

{# Page Header #}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 mb-1">
            <i class="bi bi-collection me-2"></i>
            Namespaces
        </h1>
        <p class="text-muted mb-0">Manage knowledge namespaces and their terms</p>
    </div>
    <div class="d-flex gap-2">
        <div class="input-group" style="width: 250px;">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" id="namespaces-search" placeholder="Search...">
        </div>
        <button class="btn btn-outline-secondary" id="btn-refresh-namespaces" title="Refresh">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
        <button class="btn btn-primary" id="btn-create-namespace">
            <i class="bi bi-plus-lg me-1"></i>
            Create Namespace
        </button>
    </div>
</div>

{# Loading State #}
<div id="namespaces-loading" class="text-center py-5">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p class="text-muted mt-2">Loading namespaces...</p>
</div>

{# Empty State #}
<div id="namespaces-empty" class="text-center py-5 d-none">
    <i class="bi bi-folder-x display-1 text-muted"></i>
    <h4 class="mt-3">No Namespaces Found</h4>
    <p class="text-muted">Create your first namespace to organize your knowledge.</p>
    <button class="btn btn-primary" id="btn-create-namespace-empty">
        <i class="bi bi-plus-lg me-1"></i>
        Create Namespace
    </button>
</div>

{# Namespaces Table #}
<div class="card" id="namespaces-table">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name / ID</th>
                        <th>Description</th>
                        <th class="text-center" style="width: 100px;">Access</th>
                        <th class="text-center" style="width: 80px;">Terms</th>
                        <th style="width: 120px;">Updated</th>
                        <th class="text-end" style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody id="namespaces-tbody">
                    {# Rows populated by JavaScript #}
                </tbody>
            </table>
        </div>
    </div>
</div>
