[flake8]
max-line-length = 200
; line too long, bare except, docstring in public class
; redefinition of unused 'handle_async' from line 25 Flake8(F811)
; E226: missing whitespace around arithmetic operator (stylistic preference for compact code)
ignore = E501,E722,DS101,D101,F811,E704,E226
exclude = .git,__pycache__,.venv,build,dist,node_modules
per-file-ignores =
    ; F821: undefined name - test files use forward references and inline imports
    ; F401: unused imports - test files often import for type annotations only
    ; F841: local variable assigned but never used - test patterns like capturing result
    tests/**/*.py: F821,F401,F841
    ; F401: unused imports - sometimes needed for side effects or re-exports
    src/main.py: F401
    src/patches.py: F401
