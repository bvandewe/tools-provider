    "clients": [
        {
            "clientId": "tools-provider-backend",
            "name": "Tools Provider Backend (Confidential)",
            "description": "Confidential backend client for secure token exchange",
            "enabled": true,
            "publicClient": false,
            "secret": "tools-provider-backend-secret-change-in-production",
            "protocol": "openid-connect",
            "redirectUris": ["http://localhost:8040/*", "http://localhost:8024/*", "http://localhost:1234/*", "http://localhost:8040/api/docs/oauth2-redirect"],
            "webOrigins": ["http://localhost:8040", "http://localhost:8024", "http://localhost:1234"],
